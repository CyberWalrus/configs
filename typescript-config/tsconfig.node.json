{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "verbatimModuleSyntax": true,
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "lib",
        "typeRoots": [
            "./node_modules/@types/",
            "./types",
            "./node_modules"
        ],
        "baseUrl": "./",
        "paths": {
            "$*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "types",
        "storybook",
        "scripts",
        "webpack",
        "vite",
        "/*.js",
        "/*.cjs",
        "/*.ts",
        "/*.tsx",
        "/*.mts"
    ],
    "exclude": [
        "node_modules"
    ]
}